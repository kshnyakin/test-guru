<tr>
  <td><%= test.title %></td>
  <td><%= test.category.title %></td>
  <td><%= test.questions.size %></td>
  <td><%= link_to 'show', test_path(test) %></td>
  <td><%= link_to 'edit', edit_test_path(test) %></td>
  <td>
    <%= link_to 'Delete',
      { controller: "tests", action: "destroy", id: test.id }, 
      method: :delete, 
      data: {
        confirm: "Вы действительно хотите удалить тест '#{test.title}' ?"
      }
    %>
  </td>
  <td><%= button_to 'Start', start_test_path(test) %></td>
</tr>
