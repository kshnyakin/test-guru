<div class="row">
  <h3><%= t('.header_gists') %></h3>
  <% if @gists.present? %>
    <table class="table table-hover">
      <tr>
        <th><%= t('.gist_url') %></th>
        <th><%= t('.gist_question') %></th>
        <th><%= t('.gist_user_email') %></th>
      </tr>
      <%= render @gists %>
    </table>
  <% else %>
    <p><%= t('.no_gists_yet') %></p>
  <% end %>

  <h3><%= t('.header_tests') %></h3>
  <% if @tests.present? %>
    <table class="table table-hover">
      <tr>
        <th><%= t('.title') %></th>
        <th><%= t('.category') %></th>
        <th><%= t('.questions_size') %></th>
        <th colspan='3'><%= t('.actions') %></th>
      </tr>
    <%= render @tests %>
    </table>
  <% else %>
    <p><%= t('.no_questions_yet') %></p>
  <% end %>
  <p><%= link_to t('.create_test'), new_admin_test_path, class: 'btn btn-primary' %></p>
</div>
