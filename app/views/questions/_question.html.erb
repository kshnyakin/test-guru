<tr>
  <td><%= question.title %></td>
  <td><%= question.body %></td>
  <td><%= link_to 'show', question_path(question) %></td>
  <td><%= link_to 'edit', edit_question_path(question) %></td>
  <td>
    <%= link_to 'Delete',
      { controller: "questions", action: "destroy", id: question.id }, 
      method: :delete, 
      data: {
        confirm: "Вы действительно хотите удалить тест '#{question.title}' ?"
      }
    %>
  </td>
</tr>
