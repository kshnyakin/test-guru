<div class="row">
  <h1><%= t('.header') %></h1>
  <hr class="border border-primary border-3 opacity-75">

  <%= form_with url: feedback_path, local: true, method: :post do |form| %>
    <div class="form-group">
      <div class="actions">
      <div class="field">
        <%= form.label :body %>
        <%= form.text_area :body, id: :answer_body, rows: 3, cols: 60 %><br>
      </div>
      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, id: :email %><br><br>
        <%= form.submit t('.submit') %>
      </div>
    </div>
  <% end %> 
</div>
